CFLAGS = /nologo /W3 /EHsc
CC = cl
LINK = link

build: libscheduler.dll

libscheduler.dll: so_scheduler.obj PriorityQueue.obj Heap.obj heap_util.obj
	$(LINK) /nologo /dll /out:$@ /implib:libscheduler.lib $**

heap_util.obj: PriorityQueue/Heap/heap_util.c
	$(CC) $(CFLAGS) /Fo$@ /c $**

Heap.obj: PriorityQueue/Heap/Heap.c
	$(CC) $(CFLAGS) /Fo$@ /c $**
	
PriorityQueue.obj: PriorityQueue/PriorityQueue.c
	$(CC) $(CFLAGS) /Fo$@ /c $**
	
so_scheduler.obj: so_scheduler.c
	$(CC) $(CFLAGS) /Fo$@ /c $**

clean:
	del /Q heap_util.obj Heap.obj PriorityQueue.obj so_scheduler.obj 2>NUL
	del /Q libscheduler.dll libscheduler.lib libscheduler.exp 2>NUL
